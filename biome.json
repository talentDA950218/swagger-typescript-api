{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "package.json",
      "tests/**/*.json",
      "tests/**/expected.ts",
      "tests/**/expected/**",
      "tests/**/generated/**",
      "tests/**/schema.d.ts",
      "tests/**/schema.js",
      "tests/**/schema.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
